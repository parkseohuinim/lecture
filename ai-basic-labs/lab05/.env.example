# MCP Client Azure OpenAI Configuration Template
# 이 파일을 .env로 복사해서 사용하세요

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=info

# MCP Server Configuration
MCP_SERVER_URL=http://127.0.0.1:4200/my-custom-path/
MCP_CONNECTION_TIMEOUT=30
MCP_RETRY_ATTEMPTS=3

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true

# Application Configuration
APP_TITLE=ARI Processing Server
APP_VERSION=1.0.0

# AI & LLM Configuration - Azure OpenAI (현재 사용 중)
AZURE_OPENAI_ENABLED=true
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_API_BASE=
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_MODEL=deploy-gpt-4o-01

# AI & LLM Configuration - OpenAI (백업용, Azure OpenAI 비활성화시 사용)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Vector Database Configuration
QDRANT_HOST=

# Search Engine Configuration
OPENSEARCH_HOST=

# Database Configuration
DATABASE_URL=

# 사용법:
# 1. 이 파일을 .env로 복사: cp azure-config.template .env
# 2. 필요한 설정값 수정
# 3. 서버 재시작

